{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "base_ami": "ami-b3e2be83",
    "owner": "{{env `USER`}}",
    "region": "us-west-2",
    "release": null
  },
  "builders": [
  {
    "type": "amazon-ebs",
    "name": "amazon-{{user `region`}}",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `region`}}",
    "source_ami": "{{user `base_ami`}}",
    "instance_type": "m3.medium",
    "ssh_username": "ubuntu",
    "ami_name": "mozilla nubis-consul v/{{user `release`}} t/{{timestamp}}",
    "ami_description": "Nubis - Consul Server",
    "ami_regions" : [ "us-east-1" ],
    "tags" : {
       "release": "{{user `release`}}",
       "owner": "{{user `owner`}}"
    }
  }
  ],
  "provisioners": [
  {
      "type": "puppet-masterless",
      "manifest_file": "nubis/packer/puppet.pp",
      "module_paths": [ 
      	"nubis/puppet-modules"
      ],
      "facter": {
          "ami_release": "{{user `release`}}"
      }
  },
  {
      "type": "file",
      "source": "nubis/packer/autoconsul.sh",
      "destination": "/tmp/autoconsul.sh"
  },
  {
      "type": "shell",
      "inline" : [
	"sudo mv /tmp/autoconsul.sh /etc/rc.local",
	"sudo chmod +x /etc/rc.local"
      ]
  }
  ]
}
